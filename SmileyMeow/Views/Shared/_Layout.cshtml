    <link rel="stylesheet" href="~/css/parent-profile.css">
</head>

<body>

    <div class="wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center">
                </div>
                <div class="col-md-6 d-flex justify-content-md-end">
                    <div class="social-media">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand mylogo" asp-controller="" asp-action=""><span class="flaticon-pawprint-1 mr-2"></span>Smiley
                Meow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav"
                aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a asp-controller="" asp-action="" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="about.html" class="nav-link">About</a></li>
                    <li class="nav-item"><a asp-controller="Doctors" asp-action="List" class="nav-link">Doctors</a></li>
                    @if (User.FindFirst(a => a.Type == ClaimTypes.Role)?.Value.ToString() == "PetParent")
                    {
                        <li class="nav-item"><a asp-controller="Appointments" asp-action="TakeUserAppointment"
                            class="nav-link">Appointment</a></li>
                    }
                    else {
                        <li class="nav-item"><a asp-controller="Appointments" asp-action="TakeNotUserAppointment"
                            class="nav-link">Appointment</a></li>
                    }
                    <li class="nav-item"><a asp-controller="Adopt" asp-action="List" class="nav-link">Adopt</a></li>
                    <li class="nav-item"><a asp-controller="RandomAnimalKnowledges" asp-action=""
                            class="nav-link">Contact</a></li>
                </ul>
                <div class="dropdown">
                    <button class="btn btn-first ml-5 loginout" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/Images/person-image.png" alt="an anonymous person image" class="person-img">
                    </button>
                 @if (Convert.ToInt32(User.FindFirst(a => a.Type == ClaimTypes.Sid)?.Value) != 0 && 
                 (User.FindFirst(a => a.Type == System.Security.Claims.ClaimTypes.Role)?.Value) != "Candidate")
            {
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-controller="" asp-action="ProfileSwitcher">Profile</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
            }
            else if(Convert.ToInt32(User.FindFirst(a => a.Type == ClaimTypes.Sid)?.Value) == 8 || 
            Convert.ToInt32(User.FindFirst(a => a.Type == ClaimTypes.Sid)?.Value) == 9) {
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-controller="" asp-action="ProfileSwitcher">Profile</a>
                        <a class="dropdown-item" asp-controller="AHome" asp-action="">Admin Homepage</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
            }
            else {  
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                
            }
            </div>
            </div>
           
        </div>
    </nav>
    <!-- END nav -->
    @RenderBody()
    <footer class="footer">
        <div class="container">
