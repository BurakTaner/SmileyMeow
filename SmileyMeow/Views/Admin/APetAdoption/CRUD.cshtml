@model PetAdoptViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form method="post" id="petadopt-form">
        <div class="card-body">
            <h4 class="card-title" id="crud-title"></h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row" id="form-group">
                @if (Model.Pet.AnimalId == 0)
                {
                     <label for="name" id="doblabel" class="col-sm-3 text-end control-label col-form-label idlab">Name</label>
                <div class="col-sm-9">
                    <input class="form-control idput" id="name" type="text" name="Name"
                        value='@Model.Pet.Name'>
                </div>
                     <label for="dob" id="doblabel" class="col-sm-3 text-end control-label col-form-label idlab">DOB</label>
                <div class="col-sm-9">
                    <input class="form-control idput" id="dob" type="date" name="DOB"
                        value='@(Model.Pet.DOB.Year != 1 ? Model.Pet.DOB.ToString("yyyy-MM-dd"):"")'>
                </div>
                <label for="petgender-select" class="col-sm-3 text-end control-label col-form-label">Pet Gender</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="petgender-select" name="PetGenderId">
                        <option selected="" value="0">Select a gender..</option>
                        @foreach (PetGender petGender in Model.PetGenderList)
                        {
                            <option value="@petGender.PetGenderId"
                            selected="@(Model.Pet.PetGenderId == petGender.PetGenderId)">
                                @petGender.GName</option>
                        }
                    </select>
                </div>
                <label for="specie-select" class="col-sm-3 text-end control-label col-form-label">Specie</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="specie-select" name="SpecieId">
                        <option selected="" value="0">Select a specie..</option>
                        @foreach (Specie specie in Model.SpecieList)
                        {
                            <option value="@specie.SpecieId" selected="@(Model.Pet.SpecieId == specie.SpecieId)">
                                @specie.SName</option>
                        }
                    </select>
                </div>
                <label for="breed-select" class="col-sm-3 text-end control-label col-form-label">Breed</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="breed-select" name="BreedId">
                        <option selected="" value="0">Select a breed..</option>
                        @foreach (Breed breed in Model.BreedList)
                        {
                            <option value="@breed.BreedId" selected="@(Model.Pet.BreedId == breed.BreedId)">
                                @breed.BName</option>
                        }
                    </select>
                </div>

                <label for="adoptinfo" class="col-sm-3 text-end control-label col-form-label">AdoptText</label>
                <div class="col-sm-9">
                    <input class="form-control" id="adopttext" name="AdoptText"
                        value='@(Model.Pet.AdoptionInfo == null ?  "" : Model.Pet.AdoptionInfo.AdoptText)'>
                </div>

                }
                else
                { 
                    <label for="animalid" id="idlabel"
                    class="col-sm-3 text-end control-label col-form-label idlab">Id</label>
                    <div class="col-sm-9">
                        <input class="form-control idput" id="animalid" name="AnimalId" value="@Model.Pet.AnimalId"
                        disabled>
                    </div>
                    <label for="name" id="doblabel" class="col-sm-3 text-end control-label col-form-label idlab">Name</label>
                <div class="col-sm-9">
                    <input class="form-control idput" id="name" type="text" name="Name"
                        value='@Model.Pet.Name' disabled>
                </div>
                     <label for="dob" id="idlabel" class="col-sm-3 text-end control-label col-form-label idlab">DOB</label>
                <div class="col-sm-9">
                    <input class="form-control idput" id="dob" type="date" name="DOB"
                        value='@(Model.Pet.DOB.Year != 1 ? Model.Pet.DOB.ToString("yyyy-MM-dd"):"")' disabled>
                </div>
                <label for="petgender-select" class="col-sm-3 text-end control-label col-form-label">Pet Gender</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="petgender-select" name="PetGenderId" disabled>
                        <option selected="" value="0">Select a gender..</option>
                        @foreach (PetGender petGender in Model.PetGenderList)
                        {
                            <option value="@petGender.PetGenderId"
                            selected="@(Model.Pet.PetGenderId == petGender.PetGenderId)">
                                @petGender.GName</option>
                        }
                    </select>
                </div>
                <label for="specie-select" class="col-sm-3 text-end control-label col-form-label">Specie</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="specie-select" name="SpecieId" disabled>
                        <option selected="" value="0">Select a specie..</option>
                        @foreach (Specie specie in Model.SpecieList)
                        {
                            <option value="@specie.SpecieId" selected="@(Model.Pet.SpecieId == specie.SpecieId)">
                                @specie.SName</option>
                        }
                    </select>
                </div>
                <label for="breed-select" class="col-sm-3 text-end control-label col-form-label">Breed</label>
                <div class="col-sm-9">
                    <select class="select form-select shadow-none" id="breed-select" name="BreedId" disabled>
                        <option selected="" value="0">Select a breed..</option>
                        @foreach (Breed breed in Model.BreedList)
                        {
                            <option value="@breed.BreedId" selected="@(Model.Pet.BreedId == breed.BreedId)">
                                @breed.BName</option>
                        }
                    </select>
                </div>

                <label for="adoptinfo" class="col-sm-3 text-end control-label col-form-label">AdoptText</label>
                <div class="col-sm-9">
                    <input class="form-control" id="adopttext" name="AdoptText"
                        value='@(Model.Pet.AdoptionInfo == null ?  "" : Model.Pet.AdoptionInfo.AdoptText)' disabled>
                </div>
                }


               

            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="button" class="btn btn-primary crt-btn" id="crt-btn">Create</button>
                <section class="ud-sec" id="ud-sec">
                    <button type="button" class="btn btn-primary" id="updt-btn">Update</button>
                    <button type="button" class="btn btn-primary" id="dlt-btn">Delete</button>
                </section>
                <a asp-controller="APetAdoption" asp-action="" class="btn btn-primary cnl-btn">Cancel</a>
            </div>
            <hr class="cnfrm-sec">
            <section class="cnfrm-area" id="cnfrm-area">
                <div class="card-body sbmt-area">
                    <strong class="confirm-txt">Are you really wants to <span id="cnfrm-spn"></span></strong>
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <button type="button" class="btn btn-primary" id="cancl-frm">Close</button>
                </div>
            </section>
        </div>
    </form>

</div>

<script src="~/js/adminpages/forms/petadoptionform.js" type="module"></script>