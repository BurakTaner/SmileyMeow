@model List<NotUserAppointment>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

        <h5 class="card-title">Not User Appointment Informations</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Parent Name</th>
                        <th>Patient Name</th>
                        <th>Doctor Name</th>
                        <th>Appointment Date</th>
                        <th>Status</th>
                        <th class="last-clmn">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (NotUserAppointment notUserAppointment in Model)
                    {

                        <tr>
                            <td>@notUserAppointment.AppointmentId</td>
                            <td>@($"{notUserAppointment.NotUserParentnPet.NotUserParent.FirstName} {notUserAppointment.NotUserParentnPet.NotUserParent.MiddleName} {notUserAppointment.NotUserParentnPet.NotUserParent.LastName}")</td>
                            <td>@notUserAppointment.NotUserParentnPet.NotUserParentsPet.Name</td>
                            <td>@($"{notUserAppointment.Doctor.FirstName} {notUserAppointment.Doctor.MiddleName} {notUserAppointment.Doctor.LastName} {notUserAppointment.Doctor.DoctorTitle.TShortForm}")</td>
                            <td>@notUserAppointment.AppointmentDate</td>
                            <td>@notUserAppointment.AppointmentStatus.Status</td>
                            <td>
                                <a asp-controller="ANotUserAppointments" asp-action="Info" asp-route-id="@notUserAppointment.AppointmentId" class="icn-mr">
                                    <i class="fas fa-info"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>