@model SchoolType

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-controller="ASchoolType" asp-action="PostDelete" method="post" asp-route-id="@Model.SchoolTypeId">
        <div class="card-body">
            <h4 class="card-title">Delete School Type</h4>
            <div class="form-group row">
                <p class="sure-txt">Are you want to delete this school type ?</p>
                <label for="schooltypeid" class="col-sm-3 text-end control-label col-form-label">Id</label>
                <div class="col-sm-9">
                    <p class="form-control" id="schooltypeid" name="SchoolTypeId">@Model.SchoolTypeId</p>
                </div>
                <label for="pname" class="col-sm-3 text-end control-label col-form-label">STName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="stname" name="STName">@Model.STName</p>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a type="submit" asp-controller="ASchoolType" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
