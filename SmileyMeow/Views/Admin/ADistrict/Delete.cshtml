@model District

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-controller="ADistrict" asp-action="PostDelete" method="post" asp-route-id="@Model.DistrictId">
        <div class="card-body">
            <h4 class="card-title">Delete District</h4>
            <div class="form-group row">
                <p class="sure-txt">Are you want to delete this district ?</p>
                <label for="genderid" class="col-sm-3 text-end control-label col-form-label">Id</label>
                <div class="col-sm-9">
                    <p class="form-control" id="districtid" name="DistrictId">@Model.DistrictId</p>
                </div>
                <label for="fname" class="col-sm-3 text-end control-label col-form-label">DName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="dname" name="DName">@Model.DName</p>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a type="submit" asp-controller="ADistrict" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
