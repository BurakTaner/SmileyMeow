@model List<AdoptInfo>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

        <h5 class="card-title">Adopt Informations</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adopt Text</th>
                        <th>AnimalId</th>
                        <th>Name</th>
                        <th class="last-clmn">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AdoptInfo adoptInfo in Model)
                    {

                        <tr>
                            <td>@adoptInfo.AdoptInfoId</td>
                            <td>@adoptInfo.AdoptText</td>
                            <td>@adoptInfo.Pet.AnimalId</td>
                            <td>@adoptInfo.Pet.Name</td>
                            <td>
                                <a asp-controller="AAdoptInfo" asp-action="CRUD" asp-route-id="@adoptInfo.AdoptInfoId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>