@model AdoptInfo

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form method="post" id="adoptinfo-form">
        <div class="card-body">
            <h4 class="card-title" id="crud-title"></h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row" id="form-group">
                    <label for="adoptinfoid" id="idlabel"
                    class="col-sm-3 text-end control-label col-form-label idlab">Id</label>
                <div class="col-sm-9">
                    <input class="form-control idput" id="adoptinfoid" name="AdoptInfoId" value="@Model.AdoptInfoId" disabled>
                </div>

                <label for="adoptinfo" class="col-sm-3 text-end control-label col-form-label">AdoptText</label>
                <div class="col-sm-9">
                    <input class="form-control" id="adopttext" name="AdoptText" value="@Model.AdoptText" disabled>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <section class="uprdl-info" id="uprdl-info">
                    <button type="button" class="btn btn-primary" id="updt-btn">Update</button>
                    <button type="button" class="btn btn-primary" id="dlt-btn">Delete</button>
                <a asp-controller="AAdoptInfo" asp-action="" class="btn btn-primary cnl-btn">Cancel</a>
                </section>
            </div>
            <hr class="cnfrm-sec">
            <section class="cnfrm-area" id="cnfrm-area">
                <div class="card-body sbmt-area">
                    <strong class="confirm-txt">Are you really wants to <span id="cnfrm-spn"></span></strong>
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <button type="button" class="btn btn-primary" id="cancl-frm">Close</button>
                </div>
            </section>
        </div>
    </form>

</div>

<script src="~/js/adminpages/forms/adoptinfoform.js" type="module"></script>