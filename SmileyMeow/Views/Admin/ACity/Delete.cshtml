@model City

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-controller="ACity" asp-action="PostDelete" method="post" asp-route-id="@Model.CityId">
        <div class="card-body">
            <h4 class="card-title">Delete City</h4>
            <div class="form-group row">
                <p class="sure-txt">Are you want to delete this city ?</p>
                <label for="genderid" class="col-sm-3 text-end control-label col-form-label">Id</label>
                <div class="col-sm-9">
                    <p class="form-control" id="cityid" name="CityId">@Model.CityId</p>
                </div>
                <label for="fname" class="col-sm-3 text-end control-label col-form-label">CName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="cname" name="CName">@Model.CName</p>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a type="submit" asp-controller="ACity" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
