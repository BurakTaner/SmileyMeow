@model AdoptionJoinTable

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-controller="APetAdoptionRequests" asp-action="ConfirmRequest" method="post" asp-route-id="@Model.AdoptJoinTableId">
        <div class="card-body">
            <h4 class="card-title">Delete City</h4>
            <div class="form-group row">
                <p class="sure-txt">Are you want to confirm this request? </p>
                <label for="firstname" class="col-sm-3 text-end control-label col-form-label">First Name</label>
                <div class="col-sm-9">
                    <p class="form-control" id="cityid">@Model.PetParent.FirstName</p>
                </div>
                <label for="lastnamename" class="col-sm-3 text-end control-label col-form-label">Last Name</label>
                <div class="col-sm-9">
                    <p class="form-control" id="cityid">@Model.PetParent.LastName</p>
                </div>
                <label for="fname" class="col-sm-3 text-end control-label col-form-label">Pet's Name</label>
                <div class="col-sm-9">
                    <p class="form-control" id="cname" name="CName">@Model.Pet.Name</p>
                </div>
                <label for="fname" class="col-sm-3 text-end control-label col-form-label">Why do you wants to adopt?</label>
                <div class="col-sm-9">
                    <textarea class="form-control" id="cname" name="CName">@Model.PetParentRequestText</textarea>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a type="submit" asp-controller="APetAdoptionRequests" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
