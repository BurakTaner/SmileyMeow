@model List<AdoptionJoinTable>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

        <h5 class="card-title">Adopt Informations</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Confirmed</th>
                        <th>Adoptable Animal Id</th>
                        <th>Name</th>
                        <th>PetParent Id</th>
                        <th>Firstname</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th class="last-clmn">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AdoptionJoinTable adoptionJoinTable in Model)
                    {

                        <tr>
                            <td>@adoptionJoinTable.IsConfirmed</td>
                            <td>@adoptionJoinTable.AnimalId</td>
                            <td>@adoptionJoinTable.Pet.Name</td>
                            <td>@adoptionJoinTable.PetParentId</td>
                            <td>@adoptionJoinTable.PetParent.FirstName</td>
                            <td>@adoptionJoinTable.PetParent.LastName</td>
                            <td>@adoptionJoinTable.PetParent.Userr.Emaill</td>
                            <td>
                                <a asp-controller="APetAdoptionRequests" asp-action="Confirmation" asp-route-id="@adoptionJoinTable.AdoptJoinTableId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-controller="APetAdoptionRequests" asp-action="Decline" asp-route-id="@adoptionJoinTable.AdoptJoinTableId" class="icn-mr">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>