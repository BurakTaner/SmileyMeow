@model List<Breed>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <a asp-controller="ABreed" asp-action="Create" class="btn btn-primary crt-btn-m5">
            Create
        </a>

        <h5 class="card-title">Breeds</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>BName</th>
                        <th class="last-clmn">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Breed breed in Model)
                    {

                        <tr>
                            <td>@breed.BreedId</td>
                            <td>@breed.BName</td>
                            <td>
                                <a asp-controller="ABreed" asp-action="CRUD" asp-route-id="@breed.BreedId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>