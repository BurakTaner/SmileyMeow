@model List<Userr>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

        <h5 class="card-title">Userrs</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>RName</th>
                        <th class="last-clmn">Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Userr userr  in Model)
                    {

                        <tr>
                            <td>@userr.UserrId</td>
                            <td>@userr.Emaill</td>
                            <td>@userr.Rolee.RName</td>
                            <td>
                                <a asp-controller="ARolee" asp-action="ChangeRolee" asp-route-id="@userr.UserrId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>