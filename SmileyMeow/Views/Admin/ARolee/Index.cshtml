@model List<Rolee>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <a asp-controller="ARolee" asp-action="Create" class="btn btn-primary crt-btn-m5">
            Create
        </a>
        
        <a asp-controller="ARolee" asp-action="RoleesOfUsers" class="btn btn-primary crt-btn-m5">
            RolesOfUsers
        </a>
        
        <h5 class="card-title">Rolees</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>RName</th>
                        <th class="last-clmn">Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Rolee rolee in Model)
                    {

                        <tr>
                            <td>@rolee.RoleeId</td>
                            <td>@rolee.RName</td>
                            <td>
                                <a asp-controller="ARolee" asp-action="CRUD" asp-route-id="@rolee.RoleeId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>