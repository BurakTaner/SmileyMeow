@model School

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-controller="ASchool" asp-action="PostDelete" method="post" asp-route-id="@Model.SchoolId">
        <div class="card-body">
            <h4 class="card-title">Delete School</h4>
            <div class="form-group row">
                <p class="sure-txt">Are you want to delete this school ?</p>
                <label for="schoolid" class="col-sm-3 text-end control-label col-form-label">Id</label>
                <div class="col-sm-9">
                    <p class="form-control" id="schoolid" name="SchoolId">@Model.SchoolId</p>
                </div>
                <label for="sname" class="col-sm-3 text-end control-label col-form-label">DName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="sname" name="SName">@Model.SName</p>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a type="submit" asp-controller="ASchool" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
