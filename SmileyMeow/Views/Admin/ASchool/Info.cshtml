@model School

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
 <div class="card-body">
            <h4 class="card-title">School Info</h4>
            <div class="form-group row">
                <label for="schoolid" class="col-sm-3 text-end control-label col-form-label">Id</label>
                <div class="col-sm-9">
                    <p class="form-control" id="schoolid" name="SchoolId">@Model.SchoolId</p>
                </div>
                <label for="sname" class="col-sm-3 text-end control-label col-form-label">SName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="sname" name="SName">@Model.SName</p>
                </div>
                <label for="schooltypeid" class="col-sm-3 text-end control-label col-form-label">SName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="schooltypeid" name="SchooltypeId">@Model.SchoolTypeId</p>
                </div>
                <label for="stname" class="col-sm-3 text-end control-label col-form-label">SName</label>
                <div class="col-sm-9">
                    <p class="form-control" id="stname" name="STName">@Model.SchoolType.STName</p>
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body sbmt-area">
                <a class="btn btn-primary" asp-controller="ASchool" asp-action="Update" asp-route-id="@Model.SchoolId">Update</a>
                <a asp-controller="ASchool" asp-action="Delete" asp-route-id="@Model.SchoolId" class="btn btn-primary">Delete</a>
                <a asp-controller="ASchool" asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        </div>