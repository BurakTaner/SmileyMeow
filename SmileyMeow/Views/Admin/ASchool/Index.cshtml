@model List<School>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <a asp-controller="ASchool" asp-action="Create" class="btn btn-primary crt-btn-m5">
            Create
        </a>

        <h5 class="card-title">Schools</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th class="last-clmn">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (School school in Model)
                    {

                        <tr>
                            <td>@school.SchoolId</td>
                            <td>@school.SName</td>
                            <td>@school.SchoolTypeId</td>
                            <td>@school.SchoolType.STName</td>
                            <td><a asp-controller="ASchool" asp-action="Delete"
                                asp-route-id="@school.SchoolId" class="icn-mr">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-controller="ASchool" asp-action="Update"
                                asp-route-id="@school.SchoolId" class="icn-mr">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-controller="ASchool" asp-action="Info"
                                asp-route-id="@school.SchoolId">
                                    <i class="fas fa-info"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>