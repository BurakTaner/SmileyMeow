@model DoctorInfoViewModel

@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img class="card-img card-img-left" style="border-radius:10px;" src="~/Images/staff-@(Model.SelectedDoctor.DoctorId).jpg" alt="A vetenerian's image">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@($"{Model.SelectedDoctor.FirstName} {Model.SelectedDoctor.MiddleName} { Model.SelectedDoctor.LastName} {Model.SelectedDoctor.DoctorTitle.TShortForm}")</h4>
                <p class="card-text" name="about">
                    <label for="about"><strong>Title:</strong></label>
                    <br />
                  @Model.SelectedDoctor.DoctorTitle.TFullForm
                </p>
                <p class="card-text" name="about">
                    <label for="about"><strong>DOB:</strong></label>
                    <br />
                  @Model.SelectedDoctor.DOB
                </p>
                <p class="card-text" name="about">
                    <label for="about"><strong>Gender:</strong></label>
                    <br />
                  @($"{Model.SelectedDoctor.HumanGender.GName} ({Model.SelectedDoctor.Pronoun.PName})")
                </p>
                <p class="card-text" name="about">
                    <label for="about"><strong>About:</strong></label>
                    <br />
                  @Model.SelectedDoctorInfo.DoctorInformation
                </p>
        </div>
    </div>
</div>

