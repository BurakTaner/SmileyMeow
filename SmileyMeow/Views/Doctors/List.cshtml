@model List<Doctor>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-end">
          <div class="col-md-9 ftco-animate pb-5">
            <h1 class="mb-0 bread">Meet Our Veterinary Doctors</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section bg-light">
			<div class="container">
				<div class="row">
					
					@foreach (Doctor doctor in Model)
                    {
                        <div class="col-md-6 col-lg-3 ftco-animate">
						<div class="staff">
							<div class="img-wrap d-flex align-items-stretch">
								<div class="img align-self-stretch" style="background-image: url(/Images/staff-@(doctor.DoctorId).jpg);"></div>
							</div>
							<div class="text pt-3 px-3 pb-4 text-center">
								<h3><a asp-controller="Doctors" asp-action="Info" asp-route-id="@(doctor.DoctorId)" class="doctor-name">@($" {doctor.FirstName} {doctor.MiddleName} {doctor.LastName[0]}. {doctor.DoctorTitle.TShortForm}")</a></h3>
								<span class="position mb-2">@doctor.DoctorTitle.TFullForm</span>
								<div class="faded">
	              </div>
							</div>
						</div>
					</div>
                    }
				</div>
			</div>
		</section>

