@model RegisterViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form class="login-form" asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example18">Email address</label>
                            <input type="email" id="form2Example18" class="form-control form-control-lg" name="Emaill"
                                value="@Model.Emaill" />
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example28">Password</label>
                            <input type="password" id="form2Example28" class="form-control form-control-lg"
                                name="Passwordd" />
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example38">Confirm Password</label>
                            <input type="password" id="form2Example38" class="form-control form-control-lg"
                                name="ConfirmPasswordd" />
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="confirmation-box" class="confirmation-box">
                                </div>
                            </div>
                            <p class="terms-text">agree to <a asp-controller="About" asp-action="TermsAndConditions">terms and conditions</a></p>
                        </div>
                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block register-btn" type="submit" id="register-btn" disabled>Register</button>
                        </div>

                        <p>Do you already have an account? <a asp-controller="Account" asp-action="Login"
                                class="link-info">Login</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Images/register-background-main.jpg" alt="A vetenerian pet an animal and they smiling"
                    class="w-100 vh-100 login-image-right">
            </div>
        </div>
    </div>
</section>